<% if User.current.allowed_to?(:add_documents, @project) %>
  <%= tag.div class: 'contextual' do %>
    <%= link_to(l(:label_spreadsheet_new), new_project_spreadsheet_path(@project), :class => 'icon icon-add')  %>
  <% end %>
<% end %>

<%= tag.h2 l(:label_table_plural) %>

<%= content_for :sidebar do %>
  <%= tag.h3 l(:label_spreadsheet_plural) %>
  <%= tag.ul do %>
    <% @spreadsheets.map(&:itself).each do |sheet| %>
      <%= tag.li link_to(sheet.name, project_spreadsheet_path(@project, sheet)) %>
    <% end %>
  <% end %>
<% end %>

