<%= tag.h3 @spreadsheet.name %>

<%= tag.fieldset do %>
  <%= tag.legend 'Bearbeitete Ergebnisse' %>
  <%= render_final_result_table(@members, @spreadsheet) %>
<% end %>

<%= tag.fieldset do %>
  <%= tag.legend 'Aggregierte Ergebnisse' %>
  <%= render_members_result_table(@members, @spreadsheet) %>
<% end %>

<% @members.each do |member| %>
  <% spreadsheet = spreadsheet_of(member) %>
  <% unless spreadsheet.nil? %>
    <%= tag.fieldset do %>
      <%= tag.legend "#{member.project_type.name} - #{member.name}" %>
      <%= render_spreadsheet_result_table(spreadsheet) %>
    <% end %>                                                     
  <% end %>
<% end %>

<% html_title(l(:label_spreadsheet_result_plural)) %>